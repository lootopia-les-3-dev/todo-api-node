{
  "name": "express-crud-todo",
  "version": "1.0.4",
  "description": "a todo api",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --forceExit --detectOpenHandles",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --forceExit --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "node -e \"if (process.env.CI || process.env.NODE_ENV === 'production') process.exit(0)\" && husky || true"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "transform": {},
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    }
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "sql.js": "^1.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.14",
    "supertest": "^7.2.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "eslint"
    ]
  }
}
